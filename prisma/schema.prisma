generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Collection {
  id              Int                  @id @default(autoincrement())
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  name            Json
  slug            String               @unique
  isRoot          Boolean              @default(false)
  metaTitle       Json?
  metaDescription Json?
  order           Int?
  parentId        Int?
  parent          Collection?          @relation(name: "ParentChild", fields: [parentId], references: [id])
  children        Collection[]         @relation(name: "ParentChild")
  products        Product[]
  showcase        Showcase?            @relation("CollectionShowcase")
  inShowcases     ShowcaseCollection[]
}

model Product {
  id          Int            @id @default(autoincrement())
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  name        Json
  description Json
  price       Float
  rate        Float
  published   Boolean        @default(false)
  images      ProductImage[]
  colors      ProductColor[] @default([])
  sizes       ProductSize[]  @default([])

  collection   Collection        @relation(fields: [collectionId], references: [id])
  collectionId Int
  inShowcases  ShowcaseProduct[]
  slug         String            @unique
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  imageURL  String
  imageBlur String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  oauth_token              String? @db.Text
  oauth_token_secret       String? @db.Text
  expires_at               Int?
  refresh_token_expires_in Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Showcase {
  id                  Int                  @id @default(autoincrement())
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  collectionId        Int                  @unique
  collection          Collection           @relation("CollectionShowcase", fields: [collectionId], references: [id], onDelete: Cascade)
  productsTitle       Json?
  title               Json?
  description         Json?
  showcaseCollections ShowcaseCollection[]
  showcaseProducts    ShowcaseProduct[]
}

model ShowcaseCollection {
  id           Int          @id @default(autoincrement())
  showcaseId   Int
  showcase     Showcase     @relation(fields: [showcaseId], references: [id], onDelete: Cascade)
  collectionId Int
  collection   Collection   @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  type         ShowcaseType
  sortOrder    Int          @default(0)
  title        Json?
  image        String?      @db.Text

  @@unique([showcaseId, collectionId])
}

model ShowcaseProduct {
  id         Int      @id @default(autoincrement())
  showcaseId Int
  showcase   Showcase @relation(fields: [showcaseId], references: [id], onDelete: Cascade)
  productId  Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  sortOrder  Int      @default(0)

  @@unique([showcaseId, productId])
}

enum ShowcaseType {
  PRIMARY
  SECONDARY
  HERO
}

enum ProductSize {
  S
  M
  L
  XL
  XXL
  XXXL
}

enum ProductColor {
  BLACK
  WHITE
  GRAY
  RED
  ORANGE
  YELLOW
  GREEN
  PINK
  BLUE
  PURPLE
}
